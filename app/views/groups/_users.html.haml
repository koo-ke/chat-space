#chat-group-users
  - @group.users.each do |user|
    .chat-group-user.clearfix{id: "chat-group-user-#{user.id}"}
      %input#chat-group-members{name: "group[user_ids][]", type: "hidden", value: "#{user.id}"}
      %p.chat-group-user__name
        = user.name
      .user-search-remove.chat-group-user__btn.chat-group-user__btn--remove{"data-user-id" => "${user.id}", "data-user-name" => "${user.name}"}